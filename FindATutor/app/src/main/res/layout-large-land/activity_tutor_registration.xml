<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@string/background_chosen"
    android:focusableInTouchMode="true" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/large_land_title_font_size"
        android:textStyle="bold"
        android:elegantTextHeight="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_tutor_registration"
        android:id="@id/activityTitle"
        android:textColor="#FFF"
        android:layout_gravity="top|center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:inputType="textPersonName"
        android:hint="First Last"
        android:ems="10"
        android:id="@+id/name_edit"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/large_standard_font_size"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="example@example.com"
        android:ems="10"
        android:id="@+id/email_edit"
        android:layout_below="@id/name_edit"
        android:textSize="@dimen/large_standard_font_size" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:hint="123 Somewhere Road, Anywhere, USA"
        android:ems="10"
        android:id="@+id/address_edit"
        android:layout_below="@id/email_edit"
        android:textSize="@dimen/large_standard_font_size" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="@dimen/large_button_font_size"
        android:id="@+id/register_button"
        android:layout_below="@id/address_edit"
        android:onClick="registerButtonClicked" />

</LinearLayout>