<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@string/background_chosen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/land_title_font_size"
        android:textStyle="bold"
        android:elegantTextHeight="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Freelance Tutors"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:id="@+id/freelance_list_header"
        android:hint="freelance_list_header"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="405dp"
        android:layout_below="@+id/freelance_list_header"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tutor_list"
            android:showDividers="middle">

        </LinearLayout>
    </ScrollView>
</RelativeLayout>