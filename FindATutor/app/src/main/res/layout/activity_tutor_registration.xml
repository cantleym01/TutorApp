<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@string/background_chosen"
    tools:context="com.cs410tutorgroup.tutorme.TutorRegistration">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:elegantTextHeight="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_tutor_registration"
        android:id="@+id/activityTitle"
        android:textColor="#FFF"
        android:layout_gravity="top|center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="90dp"
        android:inputType="textPersonName"
        android:hint="First Last"
        android:ems="10"
        android:id="@+id/name_edit"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="example@example.com"
        android:ems="10"
        android:id="@+id/email_edit"
        android:layout_below="@id/name_edit"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:hint="123 Somewhere Road, Anywhere, USA"
        android:ems="10"
        android:id="@+id/address_edit"
        android:layout_below="@id/email_edit"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="24dp"
        android:id="@+id/register_button"
        android:layout_below="@id/address_edit"
        android:onClick="registerButtonClicked"
        />

</RelativeLayout>
