<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:paddingTop="10dp"
    android:clickable="true">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_review_text"
        android:hint="tutor name"
        android:layout_toRightOf="@+id/ImageView_tutor_picture"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/ImageView_tutor_picture"
        android:textSize="@dimen/large_standard_font_size" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_tutor_subject"
        android:hint="tutor subject"
        android:layout_below="@+id/TextView_review_text"
        android:layout_toRightOf="@+id/ImageView_tutor_picture"
        android:paddingLeft="10dp"
        android:text="Primary Subject: "
        android:textSize="@dimen/large_standard_font_size" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_tutor_email"
        android:hint="tutor email"
        android:layout_below="@+id/TextView_tutor_subject"
        android:layout_toRightOf="@+id/ImageView_tutor_picture"
        android:paddingLeft="10dp"
        android:text="E-mail: "
        android:textSize="@dimen/large_standard_font_size" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/ImageView_tutor_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:cropToPadding="false"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:src="@drawable/test_face" />

</RelativeLayout>